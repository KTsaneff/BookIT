@using BookIT.Infrastructure.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item login-li">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item login-li">
            <form class="form-inline" asp-controller="ApplicationUser" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
        <li class="nav-item login-li">
            <a class="nav-link text-dark" asp-controller="ApplicationUser" asp-action="Profile">Profile</a>
        </li>
    }
    else
    {
        <li class="nav-item login-li">
            <a class="nav-link text-dark" asp-controller="ApplicationUser" asp-action="Register">Register</a>
        </li>
        <li class="nav-item login-li">
            <a class="nav-link text-dark" asp-controller="ApplicationUser" asp-action="Login">Login</a>
        </li>
    }
</ul>
