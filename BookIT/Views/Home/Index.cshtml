@{
    ViewData["Title"] = "Home Page";
}
<img src="/img/ThinkstockPhotos-891573112.jpg" alt="travel-stuff" class="bg-image" />
<div class="text-center showcase">    
    <h1 class="display-4">Welcome to Book IT</h1>
    <p>The Ultimate Vacation Partner</p>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/img/airplane-sky-luggage.jpg" class="d-block w-100" alt="image..." height="300">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Your Destination Awaits You</h5>
                    <p>Just pack your luggage. We will take care of the rest</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/bedsfinal.jpg" class="d-block w-100" alt="image..." height="300">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Accommodations! We take it personal.</h5>
                    <p>Search for hotels, guest houses, private apartments and many more...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/hotel-vs-air-bnb-1140x530.jpg" class="d-block w-100" alt="image..." height="300">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Find a home, away from home!</h5>
                    <p>Every corner of the world will welcome you. We guarantee!</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
